@model okanorhancomAdmin.AdminWebServis.Makale

@{
    ViewBag.Title = "MakaleEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <form id="deneme" method="post" action="../Admin/MakaleEdit" enctype="multipart/form-data">
                <div class="form-group">
                    <div class="form-group">
                        <label>Makale Kısa İçerik Tr</label>
                        <input class="form-control" placeholder="Kariyer Başlığı Giriniz" value="@Model.KisaIcerikTr" id="KisaIcerikTr" name="KisaIcerikTr" required="required">
                    </div>
                    <div class="form-group">
                        <label>Makale Kısa İçerik En</label>
                        <input class="form-control" placeholder="Kariyer Başlığı Giriniz" value="@Model.KisaIcerikEn" id="KisaIcerikEn" name="KisaIcerikEn" required="required">
                    </div>
                    <div class="form-group">
                        <label>Route Trr</label>
                        <input class="form-control" value="@Model.RouteTr" id="RouteTr" name="RouteTr" required="required">
                    </div>
                </div>

                <div class="box box-info">
                    <div class="box-header">
                        <h3 class="box-title">
                            İçerik Tr Editor

                        </h3>
                        <!-- tools box -->
                        <div class="pull-right box-tools">
                            <button type="button" class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip"
                                    title="Kapat">
                                <i class="fa fa-minus"></i>
                            </button>

                        </div>
                        <!-- /. tools -->
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body pad">
                        <textarea id="editor1" name="IcerikTr" rows="10" cols="80">
                            @Model.IcerikTr

                    </textarea>
                    </div>
                </div>
                <!-- /.box -->
                <div class="box box-info">
                    <div class="box-header">
                        <h3 class="box-title">
                            İçerik En Editor
                        </h3>
                        <!-- tools box -->
                        <div class="pull-right box-tools">
                            <button type="button" class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip"
                                    title="Kapat">
                                <i class="fa fa-minus"></i>
                            </button>

                        </div>
                        <!-- /. tools -->
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body pad">

                        <textarea id="editor2" name="IcerikEn" rows="10" cols="80">
                               @Model.IcerikEn
                    </textarea>

                    </div>
                </div>
                <label>Yayın  Durumu</label>
                <select class="form-control select2 b" id="Aktif" name="Aktif" style="width: 100%;">
                    <option value="1" selected="selected">True</option>
                    <option value="0">False</option>

                </select>
                <br />
                <div class="form-group">
                    <label>Makale Sıra No</label>
                    <select class="form-control select2 select2-hidden-accessible a" id="MakaleSiraNo" name="MakaleYayinSira" style="width: 100%;" tabindex="-1" aria-hidden="true">
                        <option selected="selected" value=@Model.MakaleYayinSira>@Model.MakaleYayinSira (Seçili Olan)</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                    </select>
                </div>

                <input type="hidden" name="Image" id="Image" value="@Model.Image" />
                <input type="hidden" name="MakaleID" id="Image" value="@Model.MakaleID" />

                <br />
                <input style="float:right;" type="submit" class="btn btn-primary" value="Ekle" />


            </form>
        </div>
        <!-- /.col-->
    </div>
    <!-- ./row -->
</section>

