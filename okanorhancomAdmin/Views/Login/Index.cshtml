
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Login_Layout.cshtml";
}

<div class="container">
    <div class="col-lg-4 col-md-3 col-sm-2"></div>
    <div class="col-lg-4 col-md-6 col-sm-8">
        <div class="logo">

            <img src="~/dist/img/admin.png" alt="Logo">
        </div>
        <div class="row loginbox">
            <div class="col-lg-12"><center>
    <span class="singtext" style="text-align:center"> ADMİN PANELİ </span>
</center>
            </div>
            <form method="post" action="~/Login/Index" enctype="multipart/form-data">

                <div class="col-lg-12 col-md-12 col-sm-12">
                    <input class="form-control" type="text" name="KullaniciAdi" placeholder="Kullanıcı Adı ...">
                </div>
                <div class="col-lg-12  col-md-12 col-sm-12">
                    <input class="form-control" type="password" name="Sifre" placeholder="Şifre ...">
                </div>
                <div class="col-lg-12  col-md-12 col-sm-12">
                    <button type="submit" class="btn btn-primary">Giriş</button>
                </div>
            </form>
        </div>
        <div class="row forGotPassword">
            @if (ViewBag.Hata != null)
            {<div class="alert alert-danger">
                <strong>@ViewBag.Hata</strong>
            </div> }
        </div>
        <br>
        <br>
        <footer class="footer">

            <p>©2018   OKAN ORHAN </p>
        </footer> <!--footer Section ends-->
    </div>
    <div class="col-lg-4 col-md-3 col-sm-2"></div>
</div>
